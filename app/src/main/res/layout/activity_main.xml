<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity"
    android:background="@color/ozadje"
    >

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/cashsensei_logo" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/cashsensei_text_logo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_create_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/napis_create_plan"
        android:background="@drawable/btn_rectangular"
        android:width="300dp"
        android:textAllCaps="false"
        android:textColor="@color/btn_text_light_mode"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>
