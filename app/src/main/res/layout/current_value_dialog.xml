<!-- dialog_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_gravity="center"
    android:background="@color/alert_light"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_new_value"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:width="300dp" />
    <EditText
        android:id="@+id/dialog_edit_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="number"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@null"
        android:layout_marginVertical="10dp"
        android:textCursorDrawable="@drawable/white_cursor"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/cross_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_weight="1"
            android:background="@drawable/rounded_imageview"
            android:backgroundTint="@color/btn_red"
            android:layout_marginHorizontal="10dp"
            android:minHeight="30dp"/>

        <ImageView
            android:id="@+id/arrow_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_check_24"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/rounded_imageview"
            android:backgroundTint="@color/btn_green"
            android:minHeight="30dp"/>
    </LinearLayout>

</LinearLayout>